<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.mirim_cess_master">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="false"
        android:largeHeap="true">
        <activity
            android:windowSoftInputMode="stateHidden"
            android:name="com.example.mirim_cess_master.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme"
            tools:ignore="LockedOrientationActivity"> <!-- 강제로 세로모드로만 하게 만듬 -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:windowSoftInputMode="stateHidden"
            android:name="com.example.mirim_cess_master.MainActivity" />
        <activity android:name="com.example.mirim_cess_master.FirstStory" />
        <activity android:name="com.example.mirim_cess_master.SecondStory" />
        <activity android:name="com.example.mirim_cess_master.FourthStory" />
        <activity
            android:windowSoftInputMode="stateHidden"
            android:name="com.example.mirim_cess_master.StartActivity"/>

        <activity android:name="com.example.mirim_cess_master.first.Frag_First_Story7_1"/>
        <activity android:name="com.example.mirim_cess_master.first.Frag_First_Story7_2"/>

        <activity android:name="com.example.mirim_cess_master.second.Frag_Second_Story8_1"/>
        <activity android:name="com.example.mirim_cess_master.second.Frag_Second_Story8_2"/>

        <activity android:name="com.example.mirim_cess_master.fourth.Frag_Fourth_Story8_1"/>
        <activity android:name="com.example.mirim_cess_master.fourth.Frag_Fourth_Story8_2"/>

    </application>
</manifest>